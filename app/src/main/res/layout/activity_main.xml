<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2DF44336"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#90D87861"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TICO'S RESTAURANT"
                android:textSize="40dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thimpu "
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textViewPrecio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="26"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Bs"
                android:textSize="20dp" />


        </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:srcCompat="@drawable/thimpu" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:onClick="antes"
                android:text="&#x25C0;" />

            <Button
                android:id="@+id/comprar"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:onClick="comprar"
                android:text="comprar" />

            <Button
                android:id="@+id/C"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:onClick="c"
                android:text="c" />

            <Button
                android:id="@+id/f"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:onClick="f"
                android:text="f" />

            <Button
                android:id="@+id/developer"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:onClick="developer"
                android:text="developer"

                />

            <Button
                android:id="@+id/button3"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:onClick="siguiente"
                android:text="&#x25B6;" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="pedido: "
                android:textSize="20dp" />

            <EditText
                android:id="@+id/inputpedido"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:text="a pagar: "
                android:textSize="20dp" />

            <EditText
                android:id="@+id/inputpagar"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="0" />


        </LinearLayout>


    </LinearLayout>


</ScrollView>